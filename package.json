{
  "name": "multiprotocol-verifier",
  "version": "1.0.0",
  "description": "Multi Protocol Verifier",
  "main": "dist/server.js",
  "scripts": {
    "clean": "rimraf dist/*",
    "lint": "eslint . --ext .ts",
    "format": "eslint . --ext .ts --fix",
    "tsc": "tsc",
    "build": "npm-run-all clean lint tsc",
    "dev": "nodemon --watch src -e ts --exec npm run server",
    "server": "ts-node-dev --prefer-ts true --no-notify -r tsconfig-paths/register --watch src --transpile-only ./src/server.ts",
    "start": "node .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gs-gs/multiprotocol-verifier.git"
  },
  "author": "Railson Sousa",
  "license": "UNLICENSED",
  "dependencies": {
    "@fidm/x509": "^1.2.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "crypto": "^1.0.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-joi-validation": "^5.0.0",
    "joi": "^17.5.0",
    "jpeg-js": "^0.4.3",
    "json-canonicalize": "^1.0.4",
    "jsqr": "^1.4.0",
    "jwa": "^2.0.0",
    "multer": "^1.4.4",
    "pdf2pic": "^2.1.4",
    "pino": "^7.5.1",
    "pino-pretty": "^7.2.0",
    "pngjs": "^6.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.13",
    "@types/jwa": "^2.0.0",
    "@types/multer": "^1.4.7",
    "@types/node": "^16.11.11",
    "@types/pngjs": "^6.0.1",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "eslint": "^8.4.0",
    "husky": "^7.0.4",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.2",
    "typescript-transform-paths": "^3.3.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format && npm run lint"
    }
  }
}
