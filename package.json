{
  "name": "multiprotocol-verifier",
  "version": "1.0.0",
  "description": "Multi Protocol Verifier",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist/*",
    "lint": "eslint . --ext .ts",
    "format": "eslint . --ext .ts --fix",
    "tsc": "tsc",
    "build": "npm-run-all clean lint tsc",
    "dev": "nodemon --watch src -e ts --exec npm run server",
    "server": "ts-node src/index.ts",
    "start": "node .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gs-gs/multiprotocol-verifier.git"
  },
  "author": "Railson Sousa",
  "license": "UNLICENSED",
  "dependencies": {
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@types/express": "^4.17.13",
    "@types/node": "^16.11.11",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "eslint": "^8.4.0",
    "husky": "^7.0.4",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format && npm run lint"
    }
  }
}
